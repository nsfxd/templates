{
  "name": "ts-lib",
  "version": "0.1.0",
  "main": "src/index.ts",
  "scripts": {
    "test": "node esw.mjs test",
    "build": "pnpm run build:js && pnpm run build:types",
    "build:js": "esbuild --format=cjs --platform=node --outdir=dist --sourcemap --minify --packages=external src/lib.ts",
    "build:types": "tsc --emitDeclarationOnly --declaration src/lib.ts --declarationDir dist"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "esbuild": "^0.17.15",
    "glob": "^9.3.4",
    "typescript": "^5.0.3"
  }
}
